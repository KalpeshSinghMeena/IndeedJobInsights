{
  "manifest_version": 3,
  "name": "Indeed Job Insights",
  "version": "1.28",
  "description": "Infinite scroll metadata and smart filtering for Indeed.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.indeed.com/*"
      ],
      "js": [
        "extract.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}